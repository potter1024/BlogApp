<%- include ("partials/header")%>

<div class="ui main text container">
  <div class="ui hige header">BLOG WEBSITE</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <%blogs.forEach(function(blog){%>
        <div class="item">
          <div class="image">
            <img src="<%=blog.image%>">
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%><h2>
          </div>

          <div class="discription">
            <p><%=blog.body.substring(0,20)%>...</p>
          </div>
          <div class="extra">
            <div class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
              Read More
              <i class="right chevron icon"></i>
            </div>
          </div>
        </div>

      <% }) %>
    </div>
  </div>
</div>

<%- include ("partials/footer")%>
